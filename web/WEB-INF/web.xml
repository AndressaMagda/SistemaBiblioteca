<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>  
        <welcome-file>index.jsp</welcome-file>  
    </welcome-file-list>  
    <filter>
        <filter-name>filtroPaginas</filter-name>
        <filter-class>controle.filtroPaginas</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>filtroPaginas</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ClienteControler</servlet-name>
        <servlet-class>controle.ClienteControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LivroControler</servlet-name>
        <servlet-class>controle.LivroControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmprestimoControler</servlet-name>
        <servlet-class>controle.EmprestimoControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>autenticador</servlet-name>
        <servlet-class>controle.autenticador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClienteControler</servlet-name>
        <url-pattern>/ClienteControler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LivroControler</servlet-name>
        <url-pattern>/LivroControler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmprestimoControler</servlet-name>
        <url-pattern>/EmprestimoControler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>autenticador</servlet-name>
        <url-pattern>/autenticador</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
